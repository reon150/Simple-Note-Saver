@model IEnumerable<SimpleNoteSaver.Models.Notes>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <h1 class="text-center">Notes</h1>
    <table class="table table-hover table-bordered table-active">

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="h6">@Html.DisplayFor(modelItem => item.Title)</span>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="float-right mx-2"><i class="fas fa-trash-alt"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="float-right mx-2"><i class="fas fa-info-circle"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="float-right mx-2"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="Create">New Note One</a>
    </p>
}
else
{
    <div class="card col-md-5 mx-auto">
        <div class="card-body">
            <h1 class="text-cente">Hello</h1>
            <p class="lead">There are not notes yet.</p>
            <a asp-action="Create" class="btn btn-block btn-dark">Create New One</a>
        </div>
    </div>
}

